{
  "name": "@solar-htw/evcc-crowdscience",
  "version": "0.0.1",
  "workspaces": [
    "apps/*"
  ],
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "cd apps/web && bun run dev",
    "format:check": "bun --bun prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "bun --bun prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "lint": "bun --bun eslint \"**/*.{ts,tsx,js,jsx,mdx}\"",
    "lint:fix": "bun --bun eslint \"**/*.{ts,tsx,js,jsx,mdx}\" --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "@total-typescript/ts-reset": "^0.6.1",
    "@tsconfig/bun": "^1.0.8",
    "@types/bun": "latest",
    "eslint": "^9.34.0",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.40.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  }
}
